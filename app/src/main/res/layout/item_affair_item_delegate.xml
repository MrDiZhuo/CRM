<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp_16">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_affair_img"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:src="@mipmap/head"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_16">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/item_affair_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="张某某"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/dark"/>
                        <TextView
                            android:id="@+id/item_affair_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2017-2-20 19:10"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/dark"
                            android:layout_marginLeft="@dimen/dp_16"/>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/item_affair_inform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提醒"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/dark"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/item_affair_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="这里介绍这里介绍这里介绍这里介绍"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_16"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16">
                    <TextView
                        android:id="@+id/item_affair_edt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11人确认/共12人"
                        android:textSize="@dimen/sp_14"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:id="@+id/item_affair_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="标记完成"
                        android:textColor="@color/nomoltext"
                        android:background="@drawable/conference_select"
                        android:textSize="@dimen/sp_14"
                        android:paddingLeft="@dimen/dp_2"
                        android:paddingRight="@dimen/dp_2"
                        android:paddingTop="@dimen/dp_4"
                        android:paddingBottom="@dimen/dp_4"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16">
                    <TextView
                        android:id="@+id/item_affair_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017-3-1 10:00"
                        android:textSize="@dimen/sp_14"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/item_affair_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14条回复"
                        android:textSize="@dimen/sp_14"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>