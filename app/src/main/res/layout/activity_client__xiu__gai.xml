<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_client__xiu__gai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    tools:context="com.zwd.crm.HomePage.client_XiuGai.View.Client_Xiu_GaiActivity">
    <com.zwd.crm.layout.layout_action_bar
        android:id="@+id/client__xiu__gai_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <TextView
                style="@style/textType"
                android:layout_width="wrap_content"
                android:text="客户名称    " />

            <EditText
                android:id="@+id/client__xiu__gai_contractname"
                style="@style/myEditText"
                android:layout_marginLeft="@dimen/dp_8"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/back" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <TextView
                style="@style/textType"
                android:layout_width="wrap_content"
                android:text="联系人        " />

            <EditText
                android:id="@+id/client__xiu__gai_customename"

                style="@style/myEditText"
                android:layout_marginLeft="@dimen/dp_8"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/back" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <TextView
                style="@style/textType"
                android:layout_width="wrap_content"
                android:text="联系人职位" />

            <EditText
                android:id="@+id/client__xiu__gai_customeposition"
                style="@style/myEditText"
                android:layout_marginLeft="@dimen/dp_8"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/back" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <TextView
                style="@style/textType"
                android:layout_width="wrap_content"
                android:text="联系人电话" />

            <EditText
                android:id="@+id/client__xiu__gai_customephone"
                style="@style/myEditText"
                android:layout_marginLeft="@dimen/dp_8"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/back" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <TextView
                style="@style/textType"
                android:layout_width="wrap_content"
                android:text="客户邮箱    " />

            <EditText
                android:id="@+id/client__xiu__gai_customeemail"
                style="@style/myEditText"
                android:layout_marginLeft="@dimen/dp_8"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/back" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <TextView
                style="@style/textType"
                android:layout_width="wrap_content"
                android:text="客户地址    " />

            <EditText
                android:id="@+id/client__xiu__gai_customeaddress"
                style="@style/myEditText"
                android:layout_marginLeft="@dimen/dp_8"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
