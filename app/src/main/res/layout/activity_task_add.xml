<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_task_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    tools:context="com.zwd.crm.HomePage.taskAdd.View.TaskAddActivity">
    <com.zwd.crm.layout.layout_action_bar
        android:id="@+id/take_add_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:background="@color/title"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    style="@style/textType"
                    android:text="任务名字    " />

                <EditText
                    android:id="@+id/take_add_task_name"
                    style="@style/myEditText"
                    android:layout_marginLeft="@dimen/dp_8"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/back"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    style="@style/textType"
                    android:text="任务标题    " />

                <TextView
                    android:id="@+id/take_add_task_title"
                    style="@style/myEditText"
                    android:layout_marginLeft="@dimen/dp_8"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/back"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/title"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textSize="@dimen/sp_14"
                    android:text="任务内容    " />

                <EditText
                    android:id="@+id/take_add_task_content"
                    android:layout_height="@dimen/dp_200"
                    android:layout_width="match_parent"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:gravity="start"
                    android:textSize="@dimen/sp_14"
                    android:padding="@dimen/dp_4"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/back"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/textType"
                    android:text="添加图片    " />
                <com.zwd.crm.widget.NoScrollGridView
                    android:id="@+id/take_add_gridview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="@dimen/dp_1"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:verticalSpacing="@dimen/dp_8" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/back"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">
                <TextView
                    style="@style/textType"
                    android:text="执行时间    " />
                <TextView
                    android:id="@+id/take_add_start_year"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:textSize="@dimen/sp_14"
                    android:text="2017"
                    />

                <TextView
                    style="@style/textType"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="年" />
                <TextView
                    android:id="@+id/take_add_start_month"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:textSize="@dimen/sp_14"
                    android:text="03"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/dp_8"
                    style="@style/textType"
                    android:text="月" />
                <TextView
                    android:id="@+id/take_add_start_day"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:textSize="@dimen/sp_14"
                    android:text="03"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/dp_8"
                    style="@style/textType"
                    android:text="日" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/back"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">
                <TextView
                    style="@style/textType"
                    android:text="截止时间    " />
                <TextView
                    android:id="@+id/take_add_end_year"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:textSize="@dimen/sp_14"
                    android:text="2017"
                    />

                <TextView
                    style="@style/textType"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="年" />
                <TextView
                    android:id="@+id/take_add_end_month"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:textSize="@dimen/sp_14"
                    android:text="03"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/dp_8"
                    style="@style/textType"
                    android:text="月" />

                <TextView
                    android:id="@+id/take_add_end_day"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:textSize="@dimen/sp_14"
                    android:text="03" />

                <TextView
                    android:layout_marginLeft="@dimen/dp_8"
                    style="@style/textType"
                    android:text="日" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/back"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    style="@style/textType"
                    android:text="任务类型    " />

                <TextView
                    android:id="@+id/take_add_task_varity"
                    style="@style/myEditText"
                    android:layout_marginLeft="@dimen/dp_8"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/back"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    style="@style/textType"
                    android:text="执行者类别" />

                <TextView
                    android:id="@+id/take_add_zhixing_varity"
                    style="@style/myEditText"
                    android:layout_marginLeft="@dimen/dp_8"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/back"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/textType"
                    android:text="执行者       " />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/take_add_task_zhixingzhe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    app:layoutManager="LinearLayoutManager"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/back"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    style="@style/textType"
                    android:text="任务负责人" />

                <TextView
                    android:id="@+id/take_add_task_leader"
                    style="@style/myEditText"
                    android:layout_marginLeft="@dimen/dp_8"/>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>
</LinearLayout>
