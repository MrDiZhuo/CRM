<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_conference__xiu_gai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    tools:context="com.zwd.crm.HomePage.conferenceXiuGai.View.Conference_XiuGaiActivity">
    <com.zwd.crm.layout.layout_action_bar
    android:id="@+id/conference__xiu_gai_layout_action_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/title"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <TextView
                style="@style/textType"
                android:text="会展名称" />

            <EditText
                android:id="@+id/conference__xiu_gai_edit_name"
                style="@style/myEditText"
                android:layout_marginLeft="@dimen/dp_8"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">
            <TextView
                style="@style/textType"
                android:text="起始时间" />
            <TextView
                android:id="@+id/conference__xiu_gai_start_year"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/custom_edittext"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:singleLine="true"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:textSize="@dimen/sp_14"
                android:hint="2017"
                />

            <TextView
                style="@style/textType"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="年" />
            <TextView
                android:id="@+id/conference__xiu_gai_start_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/custom_edittext"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:singleLine="true"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:textSize="@dimen/sp_14"
                android:hint="03"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_8"
                style="@style/textType"
                android:text="月" />
            <TextView
                android:id="@+id/conference__xiu_gai_start_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/custom_edittext"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:singleLine="true"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:textSize="@dimen/sp_14"
                android:hint="03"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_8"
                style="@style/textType"
                android:text="日" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">
            <TextView
                style="@style/textType"
                android:text="截止时间" />
            <TextView
                android:id="@+id/conference__xiu_gai_end_year"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/custom_edittext"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:singleLine="true"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:textSize="@dimen/sp_14"
                android:hint="2017"
                />

            <TextView
                android:layout_marginLeft="@dimen/dp_8"
                style="@style/textType"
                android:text="年" />
            <TextView
                android:id="@+id/conference__xiu_gai_end_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/custom_edittext"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:singleLine="true"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:textSize="@dimen/sp_14"
                android:hint="03"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_8"
                style="@style/textType"
                android:text="月" />
            <TextView
                android:id="@+id/conference__xiu_gai_end_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/custom_edittext"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:singleLine="true"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:textSize="@dimen/sp_14"
                android:hint="03"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_8"
                style="@style/textType"
                android:text="日" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <TextView
                style="@style/textType"
                android:text="会展地址" />

            <EditText
                android:id="@+id/conference__xiu_gai_edit_address"
                style="@style/myEditText"
                android:layout_marginLeft="@dimen/dp_8"/>
        </LinearLayout>
        <View

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/title"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:textSize="@dimen/sp_14"
                android:text="会展介绍" />

            <EditText
                android:id="@+id/conference__xiu_gai_edit_description"
                android:layout_height="@dimen/dp_200"
                android:layout_width="match_parent"
                android:background="@drawable/custom_edittext"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:gravity="start"
                android:textSize="@dimen/sp_14"
                android:padding="@dimen/dp_4"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <TextView
                style="@style/textType"
                android:text="会展状态" />

            <TextView
                android:id="@+id/conference__xiu_gai_layout_state"
                style="@style/myEditText"
                android:layout_marginLeft="@dimen/dp_8"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
