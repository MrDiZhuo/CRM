<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_change_head"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context="com.zwd.crm.HomePage.changeHeadImg.View.ChangeHeadActivity">
    <com.zwd.crm.layout.layout_action_bar
        android:id="@+id/change_head_img_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16">

        <Button
            android:id="@+id/btn_take_photo"
            android:background="@drawable/corner_white_2dp_with_stroke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="拍照上传"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"/>

        <Button
            android:id="@+id/btn_upload_from_rom"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/corner_white_2dp_with_stroke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="从相册上传"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"/>

    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_300"
        app:cardCornerRadius="@dimen/dp_4"
        android:layout_below="@id/change_head_img_action_bar"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/iv_change_img_head_img"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_300" />
    </android.support.v7.widget.CardView>


</RelativeLayout>
