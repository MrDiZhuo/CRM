<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/title"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    app:cardCornerRadius="@dimen/dp_4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_16">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_introduce_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张某某"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/dark"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/item_introduce_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-02-23"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/dark"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/item_introduce_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="这里介绍这里介绍这里介绍这里介绍这里介绍这里介绍这里介绍这里介这里介绍这里介绍这里介绍这里介"
            android:textSize="@dimen/sp_14"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"
            android:background="@color/back"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_16"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="负责人："
                    android:textSize="@dimen/sp_14"/>
                <TextView
                    android:id="@+id/item_introduce_juese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="负责人"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_introduce_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未确认"
                android:textSize="@dimen/sp_14"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>