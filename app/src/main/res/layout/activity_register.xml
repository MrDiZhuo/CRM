<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zwd.crm.HomePage.register.View.registerActivity">
    <com.zwd.crm.layout.layout_action_bar
        android:id="@+id/register_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_register_username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="手机号"
        android:textColorHint="@color/hint"
        android:layout_margin="@dimen/dp_16"
        android:textSize="@dimen/sp_14"

        />

    <EditText
        android:id="@+id/et_resister_psw"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        style="@style/EditTextRegister"
        android:inputType="textPassword"
        android:textSize="@dimen/sp_14"
        android:hint="请输入密码"/>

    <EditText
        android:id="@+id/et_register_hint_psw_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        style="@style/EditTextRegister"
        android:inputType="textPassword"
        android:textSize="@dimen/sp_14"
        android:hint="确认密码"/>


    <LinearLayout
        android:id="@+id/ll_register_layout_verification"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_register_verification_code"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="48dp"
            android:hint="请输入验证码"
            android:textSize="@dimen/sp_14"
            android:textColorHint="@color/hint"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_gravity="bottom"
            />

        <Button
            android:id="@+id/btn_register_send_verification_code"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            android:textColor="@color/title"
            android:textSize="@dimen/sp_14"
            android:padding="@dimen/dp_2"
            android:background="@drawable/corner_gray_3dp_nomal"
            />

    </LinearLayout>


</LinearLayout>
