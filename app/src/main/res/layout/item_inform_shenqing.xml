<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/title"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    app:cardCornerRadius="@dimen/dp_4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_16">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shenqing_img"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:src="@mipmap/head"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_gravity="center_vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/shenqing_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张某某"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/sp_14" />
                    <TextView
                        android:id="@+id/shenqing_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="2017-2-20 19:10"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电话："
                        android:textSize="@dimen/sp_14"/>
                    <TextView
                        android:id="@+id/shenqing_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15016546"
                        android:textSize="@dimen/sp_14"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@color/back"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16">


            <TextView
                android:id="@+id/shenqing_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拒绝"
                android:textColor="@color/button"
                android:background="@drawable/corner_white_4dp"
                android:textSize="@dimen/sp_14"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/shenqing_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意"
                android:textColor="@color/title"
                android:background="@drawable/corner_gray_3dp_nomal"
                android:textSize="@dimen/sp_14"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:layout_toLeftOf="@id/shenqing_no"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>